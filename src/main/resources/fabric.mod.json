{
  "schemaVersion": 1,
  "id": "bladebound",
  "version": "${version}",
  "name": "Bladebound",
  "description": "Legendary blades, staves, dangerous curses, and rare structures scattered across the world.",
  "authors": [
    "Owen"
  ],
  "contact": {
    "homepage": "owenlab.dev",
    "sources": "https://github.com/omueller5/bladebound"
  },
  "license": "MIT",
  "icon": "assets/bladebound/icon.png",
  "environment": "*",

  "entrypoints": {
    "main": [
      "net.owen.bladebound.Bladebound"
    ],
    "client": [
      "net.owen.bladebound.BladeboundClient"
    ],
    "emi": [
      "net.owen.bladebound.emi.BladeboundEmiPlugin"
    ],
    "modmenu": [
      "net.owen.bladebound.BladeboundModMenu"
    ],
    "fabric-datagen": [
      "net.owen.bladebound.BladeboundDataGenerator"
    ]
  },

  "mixins": [
    "bladebound.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.15.11",
    "minecraft": "~1.21.1",
    "java": ">=21",
    "fabric-api": "*"
  },

  "suggests": {
    "emi": "*",
    "modmenu": "*",
    "yet_another_config_lib_v3": "*",
    "trinkets": "*"
  }
}
